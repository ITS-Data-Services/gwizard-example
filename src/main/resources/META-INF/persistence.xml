<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<!--
	Although we pass in all configuration parameters programmatically, this file must exist
	in the same JAR that holds your entity classes and this file must specify the Hibernate
	<provider>.
	-->

	<persistence-unit name="gw-persistence-unit" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	</persistence-unit>
</persistence>